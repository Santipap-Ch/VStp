<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenCyan"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:id="@+id/events"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:background="@color/colorDeepCarmine">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_event24px"
                    android:tint="#ffffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:padding="22dp"
                    android:text="EVENTS"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="@color/colorRedDevil"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:id="@+id/search"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:background="@color/colorCadmiumOrange">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_search24px"
                    android:tint="#ffffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:padding="22dp"
                    android:text="SEARCH"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="@color/colorTenne"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:id="@+id/admin"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:background="@color/colorSaffron">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_supervisor24px"
                    android:tint="#ffffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:padding="22dp"
                    android:text="ADMIN"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="@color/colorDarkGoldenrod"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:id="@+id/contact"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:background="@color/colorMediumTurquoise">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_contact24px"
                    android:tint="#ffffffff"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="11dp"
                    android:padding="22dp"
                    android:text="CONTACT"
                    android:textColor="#ffffff"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:background="@color/colorLightSeaGreen"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>